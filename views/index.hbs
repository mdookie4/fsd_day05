<form action="/search" method="GET">

<div class="form-group">
    <input type="text" class="form-control" name="searchQuery" id="searchQuery" min="1" placeholder="Please enter your search query">
</div>

<div class="form-group d-flex flex-row justify-content-around border">
    <div class="form-check col-lg-auto border">
        <input type="radio" class="form-check-input" name="country" id="country1" value="us">
        <img src="flags/us.png" alt="USA">
    </div>
    <div class="form-check col-lg-auto border">
        <input type="radio" class="form-check-input" name="country" id="country2" value="uk">
        <img src="flags/uk.png" alt="UK">
    </div>
    <div class="form-check col-lg-auto border">
        <input type="radio" class="form-check-input" name="country" id="country3" value="fr">
        <img src="flags/fr.png" alt="France">
    </div>
</div>
<div class="form-group d-flex flex-row justify-content-around border">
    <div class="form-check ">
        <input type="radio" class="form-check-input" name="country" id="country4" value="sg">
        <img src="flags/sg.png" alt="Singapore">
    </div>
    <div class="form-check ">
        <input type="radio" class="form-check-input" name="country" id="country5" value="jp">
        <img src="flags/jp.png" alt="Japan">
    </div>
    <div class="form-check ">
        <input type="radio" class="form-check-input" name="country" id="country6" value="cn">
        <img src="flags/cn.png" alt="China">
    </div>
</div>

<div class="form-group">
    <select name="category" id="category" class="form-control">
        <option value="business" selected>Business</option>
        <option value="entertainment">Entertainment</option>
        <option value="technology">Technology</option>
    </select>
</div>
<div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-outline-success btn-lg">Search</button>
</div>

</form>

